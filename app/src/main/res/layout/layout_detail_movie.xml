<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_detail_movie"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_primary">

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_5sdp"
        android:background="@color/color_primary_variant" />

    <androidx.cardview.widget.CardView
        android:id="@+id/img_poster"
        android:layout_width="@dimen/_115sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_below="@id/view1"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:importantForAccessibility="no"
        android:scaleType="fitXY"
        app:cardCornerRadius="@dimen/_10sdp"
        tools:src="@drawable/jungle_cruise_img">

        <ImageView
            android:id="@+id/iv_profile_movie"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/profile_movie"
            android:scaleType="centerCrop"
            tools:src="@drawable/jungle_cruise_img" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_title_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_poster"
        android:layout_toEndOf="@+id/img_poster"
        android:paddingTop="@dimen/_2sdp"
        android:paddingBottom="@dimen/_2sdp"
        android:textColor="@color/color_secondary"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold"
        tools:text="Jungle Cruise" />

    <TextView
        android:id="@+id/tv_genre_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title_movie"
        android:layout_alignStart="@+id/tv_title_movie"
        android:paddingTop="@dimen/_2sdp"
        android:paddingBottom="@dimen/_2sdp"
        android:text="@string/genre"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_genre_title"
        android:layout_alignStart="@+id/tv_genre_title"
        android:layout_marginEnd="@dimen/_12sdp"
        android:paddingBottom="@dimen/_12sdp"
        android:textColor="@color/color_secondary_variant"
        tools:text="Action, Adventure, Fantasy" />

    <TextView
        android:id="@+id/tv_date_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_genre"
        android:layout_alignStart="@+id/tv_genre"
        android:paddingBottom="@dimen/_2sdp"
        android:text="@string/date_release"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_date_title"
        android:layout_alignStart="@+id/tv_date_title"
        android:paddingBottom="@dimen/_12sdp"
        android:textColor="@color/color_secondary_variant"
        tools:text="11/23/2019" />

    <TextView
        android:id="@+id/tv_runtime_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_date"
        android:layout_alignStart="@+id/tv_date"
        android:paddingBottom="@dimen/_2sdp"
        android:text="@string/duration"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_runtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_runtime_title"
        android:layout_alignStart="@+id/tv_runtime_title"
        android:paddingBottom="@dimen/_12sdp"
        android:textColor="@color/color_secondary_variant"
        tools:text="1h 2m" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_3sdp"
        android:layout_below="@id/img_poster"
        android:background="@color/color_primary_variant" />

    <TextView
        android:id="@+id/tv_title_overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view2"
        android:padding="@dimen/_12sdp"
        android:text="@string/overview"
        android:textColor="@color/color_secondary"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_overview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title_overview"
        android:paddingStart="@dimen/_12sdp"
        android:paddingEnd="@dimen/_12sdp"
        android:paddingBottom="@dimen/_12sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_12ssp"
        tools:text="Once home to the most advanced civilization on Earth, Atlantis is now an underwater kingdom ruled by the power-hungry King Orm. With a vast army at his disposal, Orm plans to conquer the remaining oceanic people and then the surface world. Standing in his way is Arthur Curry, Orm's half-human, half-Atlantean brother and true heir to the throne." />

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_3sdp"
        android:layout_below="@id/tv_overview"
        android:background="@color/color_primary_variant" />

    <TextView
        android:id="@+id/tv_add_overview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_overview"
        android:padding="@dimen/_12sdp"
        android:text="@string/add_your_reviews"
        android:textColor="@color/color_secondary"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold"
        app:drawableLeftCompat="@drawable/ic_add_review" />

    <TextView
        android:id="@+id/tv_add_reviews"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_34sdp"
        android:layout_below="@+id/tv_add_overview_title"
        android:layout_marginLeft="@dimen/_9sdp"
        android:layout_marginRight="@dimen/_9sdp"
        android:background="@drawable/shape_rectangle_white"
        android:gravity="center"
        android:text="@string/input_review"
        android:textAlignment="center"
        android:textColor="@color/black" />
</RelativeLayout>